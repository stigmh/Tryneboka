@page
@model FeedModel
@{
    ViewData["Title"] = "Feed";
}

<div class="text-center">
    <h1 class="display-4">Feed</h1>

    <div>
        <form method="post">
            <div class="form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="Post.Content"></label>
                <textarea asp-for="Post.Content" class="form-control" autocomplete="content" aria-required="true"></textarea>
                <span asp-validation-for="Post.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Publish" class="btn btn-primary" />
            </div>
        </form>
    </div>

    @foreach(var post in Model.Posts) {
        <div>
            <p><em>@Html.DisplayFor(modelItem => post.Published)</em></p>
            <p><strong>@Html.DisplayFor(modelItem => post.Username)</strong></p>
            <p>@Html.Raw(post.Post)</p>
        </div>
    }
</div>
